 <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="example2ModalCenterTitle"></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= simple_form_for(bio_pic) do |f| %>
      <%= f.rich_text_area :body, placeholder: "Ta bio", class: "w-100 h-64 text-justify overflow-auto" %>
      <%= f.button :submit %>
      <% end %>

    </div>

    <div class="modal-footer">
      <%= link_to "Edit", bio_path(bio_pic), method: :patch, remote: true %>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" type="submit" class="btn btn-primary" data-confirm="Are you sure?" >Save changes</button>
    </div>
  </div>
</div>

